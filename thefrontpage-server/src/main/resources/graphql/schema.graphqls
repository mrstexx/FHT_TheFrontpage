type User {
    id: ID!
    username: String!
    email: String!
    createdAt: String!
}

type Community {
    id: ID!
    name: String!
    description: String
    createdAt: String!
    posts: [Post]
    user: User
}

type Post {
    id: ID!
    title: String!
    body: String
    url: String
    createdAt: String!
    community: Community
    user: User
    voteCount: Int
    comments: [Comment]
}

type Comment {
    id: ID!
    body: String!
    createdAt: String!
    post: Post
    user: User
}

type Vote {
    id: ID!
    voteType: VoteType
    post: Post
    user: User
}

enum VoteType {
    UP_VOTE
    DOWN_VOTE
}

input RegisterRequest {
    username: String!
    password: String!
    email: String!
}

input LoginRequest {
    username: String!
    password: String!
}

input PostRequest {
    username: String!
    communityName: String!
    title: String!
    url: String
    body: String
}

input CommentRequest {
    postId: ID!
    body: String!
    username: String!
}

input CommunityRequest {
    name: String!
    description: String
    username: String!
}

input VoteRequest {
    voteType: VoteType!
    postId: ID!
}

# All available mutations on this graphql server
type Mutation {
    createCommunity(input: CommunityRequest): Community!
    createPost(input: PostRequest): Post!
    createComment(input: CommentRequest): Comment!
    vote(input: VoteRequest): Boolean
}

# All available queries on this graphql server
type Query {
    getAllPosts: [Post]
    getPostById(id: ID): Post
    getAllCommunities: [Community]
    getCommunityByName(name: String): Community
    getCommentsByPostId(postId: ID): [Comment]
}

schema {
    query: Query
    mutation: Mutation
}